{
  "name": "node-text-mafia",
  "version": "1.0.0",
  "private": true,
  "description": "Text-based Mafia game loop with AI stubs, mirroring the Unity flow.",
  "main": "src/cli.js",
  "scripts": {
    "start": "node src/cli.js",
    "gui": "node src/guiServer.js",
    "colab:gui": "node src/guiServer.js",
