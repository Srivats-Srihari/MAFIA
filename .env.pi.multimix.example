# Raspberry Pi + mixed parallel workers (multimix)
# Copy to .env and replace placeholder values.

MAFIA_HEADLESS=1
PYTHON_BIN=python3

# Enable LLM mode by default in CLI startup.
MAFIA_USE_PUTER=1

# Puter tokens (3 workers, one token per worker).
PUTER_AUTH_TOKENS=PUTER_TOKEN_1,PUTER_TOKEN_2,PUTER_TOKEN_3

# Provider keys for mixed workers.
MISTRAL_API_KEY=YOUR_MISTRAL_API_KEY
GROQ_API_KEY=YOUR_GROQ_API_KEY
CLAUDE_API_KEY=YOUR_CLAUDE_API_KEY
SAMBANOVA_API_KEY=YOUR_SAMBANOVA_API_KEY

# Optional provider models.
PUTER_MODEL=gpt-5.2
MISTRAL_MODEL=mistral-small-latest
GROQ_MODEL=llama-3.3-70b-versatile
CLAUDE_MODEL=claude-3-7-sonnet-latest
SAMBANOVA_MODEL=ALLaM-7B-Instruct-preview

# Keep retries modest on Pi.
MAFIA_MAX_RETRIES=1

# Worker timeout for multimix child workers (ms).
MAFIA_WORKER_TIMEOUT_MS=300000

# Optional sampling controls.
MAFIA_PROVIDER_TEMPERATURE=0.2
MAFIA_PROVIDER_TOP_P=0.2
