# Copy this file to `.env` and fill your keys.
# The app auto-loads `.env` at runtime.

# Provider mode: auto | puter | sambanova | mistral | openrouter | together | groq
MAFIA_AI_PROVIDER=auto
MAFIA_PROVIDER_CHAIN=puter,sambanova,mistral,openrouter,together,groq

# Strict behavior: if all models/providers fail, game aborts.
MAFIA_STRICT_AI=1

# Optional retries per model call
MAFIA_MAX_RETRIES=2

# Raspberry Pi/headless safe mode:
# 1 = do not open browser auth flows automatically
MAFIA_HEADLESS=1
# Linux/Raspberry Pi default is python3; override if needed
PYTHON_BIN=python3

# ---------- Puter ----------
PUTER_AUTH_TOKEN=
PUTER_AUTH_TOKENS=
PUTER_MODELS=gpt-5.2,gpt-5.1,gpt-4.1

# ---------- SambaNova ----------
SAMBANOVA_API_KEY=
SAMBANOVA_BASE_URL=https://api.sambanova.ai/v1
SAMBANOVA_MODELS=ALLaM-7B-Instruct-preview
SAMBANOVA_TEMPERATURE=0.2
SAMBANOVA_TOP_P=0.2

# ---------- Mistral ----------
MISTRAL_API_KEY=
MISTRAL_BASE_URL=https://api.mistral.ai/v1/chat/completions
MISTRAL_MODELS=mistral-small-latest,mistral-medium-latest,mistral-large-latest

# ---------- OpenRouter ----------
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODELS=mistralai/mistral-small-3.1-24b-instruct

# ---------- Together ----------
TOGETHER_API_KEY=
TOGETHER_BASE_URL=https://api.together.xyz/v1/chat/completions
TOGETHER_MODELS=mistralai/Mistral-7B-Instruct-v0.3

# ---------- Groq ----------
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODELS=llama-3.3-70b-versatile,llama-3.1-8b-instant

# Shared sampling
MAFIA_PROVIDER_TEMPERATURE=0.2
MAFIA_PROVIDER_TOP_P=0.2
